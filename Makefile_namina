SRC		=	parsing/input_parsing/get_app_path.c\
			parsing/input_parsing/parser.c\
			parsing/input_parsing/validation.c\
			parsing/input_parsing/parser_utils.c\
			\
            main.c env_var.c builtins/builtins.c builtins/my_cd.c builtins/my_export.c builtins/my_unset.c\
            utils/free.c parsing/parse_args.c parsing/expansion/expansion.c parsing/expansion/quotes.c parsing/expansion/preprocessor.c\
            utils/ft_atoi_ll.c utils/miscellaneous.c utils/print.c builtins/my_exit.c initialization.c\

PROG	=	minishell
LIBDIR	=	./libft
LIB		=	$(LIBDIR)/libft.a
CC		=	gcc
CFLAGS	=	-Wall -Wextra -Werror -L $(LIBDIR) -lft -g
HEADER	=	minishell.h
MAKEFILE	= Makefile

.PHONY	:	all re clean fclean x

all		:	$(PROG)

$(LIB)	:
			make -s -C $(LIBDIR)

$(PROG)	:	$(MAKEFILE) $(HEADER) $(SRC) $(LIB)
			$(CC) $(CFLAGS) $(SRC) -o $(PROG)

clean	:
			rm -f $(PROG)
			make clean -C $(LIBDIR)

fclean	:
			make fclean -C $(LIBDIR)
			rm -f $(PROG)

x		:	$(PROG)
			./minishell

re		:	fclean all